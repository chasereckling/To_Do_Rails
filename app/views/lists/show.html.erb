<% content_for(:title, "List | To Do") %>

<h1><%= @list.name %></h1>

<span><%= link_to "Edit List", edit_list_path(@list) %></span>
<span><%= link_to "Delete List", list_path(@list), :data => {:confirm => "you sure?", :method => "delete"} %></span>

<p><%= @list.description %></p>

<% if @list.tasks.any? %>
  <h4>Your tasks:</h4>

  <ul>
    <% @list.tasks.each do |task| %>
      <li>
        <%= task.description %> |
        <%= link_to "Edit", edit_list_task_path(@list, task) %> |
        <%= link_to "Delete", list_task_path(@list, task), :data => {:confirm => "are you sure?", :method => delete} %>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>There are no tasks yet!</p>
<% end %>

<p><%= link_to "Add task", new_list_task_path(@list) %></p>

<p> <%= link_to "Return to lists", lists_path %></p>
